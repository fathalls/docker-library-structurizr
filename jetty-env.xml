<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure_9_3.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">

  <New id="structurizrDataDirectory" class="org.eclipse.jetty.plus.jndi.EnvEntry">
    <Arg>structurizr/dataDirectory</Arg>
    <Arg type="java.lang.String">/appdata/structurizr</Arg>
    <Arg type="boolean">true</Arg>
  </New>

  <New id="structurizrLicense" class="org.eclipse.jetty.plus.jndi.EnvEntry">
    <Arg>structurizr/license</Arg>
    <Arg type="java.lang.String"><Env name="LICENSE"/></Arg>
    <Arg type="boolean">true</Arg>
  </New>
</Configure>
